{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*"]
}
